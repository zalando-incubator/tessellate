{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-\\.]+$"
    },
    "props": {
      "oneOf": [
        {
          "type": "object"
        },
        {
          "type": "null"
        }
      ]
    },
    "children": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#"
          },
          {
            "type": "string"
          }
        ]
      }
    }
  },
  "required": [
    "type",
    "props",
    "children"
  ]
}
