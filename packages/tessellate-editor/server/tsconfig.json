{
  "compilerOptions": {
    "outDir": "../dist/server",
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "Node",
    "newLine": "LF",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "pretty": true,
    "removeComments": true,
    "lib": ["dom", "es2017"]
  },
  "include": ["./**/*"],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "newLineCharacter": "\n"
  }
}
